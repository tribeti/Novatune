<UserControl
    x:Class="App2.Controls.MediaControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App2.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Background="Transparent">
        <Grid
            Height="140"
            VerticalAlignment="Bottom"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Margin="16,8,16,4"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="CurrentTimeText"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="00:00" />
                <Slider
                    x:Name="TimeSlider"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    IsThumbToolTipEnabled="False"
                    StepFrequency="1" />
                <TextBlock
                    x:Name="TotalTimeText"
                    Grid.Column="2"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="00:00" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="MediaTitleText"
                        Margin="0,0,0,4"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Không có file nào đang phát"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="14"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">

                    <Button
                        x:Name="ShuffleButton"
                        Width="45"
                        Height="45"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ShuffleButton_Click"
                        CornerRadius="200">
                        <Grid>
                            <FontIcon
                                x:Name="ShuffleIcon"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="16"
                                Glyph="{x:Bind _mediaPlayerViewModel.ShuffleGlyph}" />
                            <FontIcon
                                x:Name="ShuffleOffOverlay"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="16"
                                Glyph="&#xE894;"
                                Visibility="Collapsed" />

                        </Grid>
                    </Button>
                    <Button
                        x:Name="PreviousButton"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="PreviousButton_Click"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Previous">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Glyph="&#xE892;" />
                    </Button>
                    <Button
                        x:Name="SeekBackwardButton"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="SeekBackwardButton_Click"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Seek backward 5s">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Glyph="&#xEB9E;" />
                    </Button>
                    <Button
                        x:Name="PlayPauseButton"
                        Width="60"
                        Height="60"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="PlayPauseButton_Click"
                        CornerRadius="200"
                        ToolTipService.ToolTip="Play/Pause">
                        <FontIcon
                            x:Name="PlayPauseIcon"
                            FontFamily="Segoe Fluent Icons"
                            FontSize="20"
                            Glyph="" />
                    </Button>
                    <Button
                        x:Name="SeekForwardButton"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="SeekForwardButton_Click"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Seek forward 5s">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Glyph="&#xEB9D;" />
                    </Button>
                    <Button
                        x:Name="NextButton"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="NextButton_Click"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Next">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Glyph="&#xE101;" />
                    </Button>
                    <Button
                        x:Name="RepeatButton"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="RepeatButton_Click"
                        CornerRadius="20">
                        <FontIcon
                            x:Name="RepeatIcon"
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Glyph="{x:Bind _mediaPlayerViewModel.RepeatGlyph}" />
                    </Button>
                    <Button
                        x:Name="StopButton"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="StopButton_Click"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Reset">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Glyph="&#xE72C;" />
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>