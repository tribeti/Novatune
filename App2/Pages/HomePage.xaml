<Page
    x:Class="App2.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:App2.ViewModels"
    xmlns:storage="using:Windows.Storage"
    Background="Transparent"
    NavigationCacheMode="Required">

    <Page.DataContext>
        <vm:FolderViewModel />
    </Page.DataContext>

    <Page.Resources>
        <!-- Template hiển thị nội dung của Folder -->
        <DataTemplate x:Key="CardContentTemplate">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
                <TextBlock Text="{Binding Name}" FontSize="14" Foreground="Black"/>
                <TextBlock Text="{Binding Path}" FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="20 50 20 20" CacheMode="BitmapCache">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <ScrollViewer Grid.Row="0"
                      HorizontalScrollMode="Enabled"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollMode="Disabled"
                      VerticalScrollBarVisibility="Hidden">
            <ItemsView 
                ItemsSource="{Binding Folders}"
                SelectionMode="Single"
                SelectionChanged="Folders_SelectionChanged">
                <ItemsView.Layout>
                    <StackLayout Orientation="Horizontal" Spacing="10"/>
                </ItemsView.Layout>

                <ItemsView.ItemTemplate>
                    <DataTemplate>
                        <ItemContainer>
                            <Grid Background="Cyan" 
                                  CornerRadius="4" 
                                  Padding="10"
                                  Height="150"
                                  Width="150">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="5"/>
                            </Grid>
                        </ItemContainer>
                    </DataTemplate>
                </ItemsView.ItemTemplate>
            </ItemsView>
        </ScrollViewer>

        <ListView ItemsSource="{Binding Contents}" 
                  Grid.Row="1" 
                  Margin="0,10,0,0"
                  CacheMode="BitmapCache">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="storage:IStorageItem">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{x:Bind Name}" 
                                   FontSize="16" 
                                   VerticalAlignment="Center" />
                        <TextBlock Text="{x:Bind Path}" 
                                   FontSize="14"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
