<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="App2.Pages.FolderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App2.Pages"
    xmlns:lvs="using:LibVLCSharp.Platforms.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:storage="using:Windows.Storage"
    xmlns:viewModels="using:App2.ViewModels"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="SpotifyGreen" Color="#1DB954" />
        <SolidColorBrush x:Key="YouTubeRed" Color="#FF0000" />

        <Style x:Key="FileItemStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
        </Style>
    </Page.Resources>

    <Grid
        x:Name="RootGrid"
        Padding="24"
        BackgroundSizing="OuterBorderEdge">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Click="BackButton_Click" Style="{StaticResource BackButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <FontIcon
                        Margin="0,0,8,0"
                        FontFamily="Segoe Fluent Icons"
                        Glyph="&#xE72B;" />
                    <TextBlock VerticalAlignment="Center" Text="Quay lại" />
                </StackPanel>
            </Button>
        </Grid>

        <StackPanel Grid.Row="1" Margin="0,0,0,24">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="36"
                FontWeight="SemiBold"
                Text="Chi tiết folder" />
            <TextBlock
                Margin="0,0,0,12"
                FontSize="24"
                Opacity="0.8"
                Text="{x:Bind SelectedFolder.Name}" />
            <Rectangle
                Height="1"
                Margin="0,8,0,0"
                Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />
        </StackPanel>

        <!--  Media Files List  -->
        <ListView
            x:Name="FileListView"
            Grid.Row="2"
            Background="Transparent"
            IsItemClickEnabled="True"
            ItemClick="FileListView_ItemClick"
            ItemsSource="{x:Bind MediaPlayerVM.MediaItems}"
            SelectionMode="Single"
            ShowsScrollingPlaceholders="True">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0,4" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="storage:IStorageItem">
                    <Grid Style="{StaticResource FileItemStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,16,0"
                            VerticalAlignment="Center"
                            FontFamily="Segoe Fluent Icons"
                            Glyph="&#xE8B7;" />

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{x:Bind Name}"
                                TextTrimming="CharacterEllipsis" />

                            <TextBlock
                                x:Name="FileTypeText"
                                Margin="0,4,0,0"
                                FontSize="12"
                                Opacity="0.6"
                                Text="{x:Bind Path}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition />
                </TransitionCollection>
            </ListView.ItemContainerTransitions>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</Page>