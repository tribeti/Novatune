<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Novatune.Pages.FolderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Novatune.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Novatune.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Novatune.Models"
    xmlns:storage="using:Windows.Storage"
    xmlns:viewModels="using:Novatune.ViewModels"
    Background="Transparent"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="FileItemStyle" TargetType="Grid">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12,8" />
        </Style>
        <converters:ImageConverter x:Key="ThumbnailConverter" />
    </Page.Resources>

    <Grid Name="RootPageGrid" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0" Margin="0,8,0,20">
            <Button
                Name="BackButton"
                Margin="8"
                Click="BackButton_Click"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                Style="{ThemeResource BackButtonStyle}">
                <FontIcon Glyph="&#xE72B;" />
            </Button>

            <TextBlock
                Grid.Row="1"
                Margin="20,0,0,0"
                HorizontalAlignment="Center"
                FontSize="20"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                RelativePanel.RightOf="BackButton"
                Text="{x:Bind SelectedFolder.Name, Mode=OneWay, FallbackValue='Đang tải thông tin thư mục...'}"
                TextTrimming="CharacterEllipsis" />

            <TextBox
                x:Name="FilterByFirstName"
                Width="200"
                HorizontalAlignment="Right"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                TextChanged="OnFilterChanged" />
        </RelativePanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,16"
            Visibility="{x:Bind FolderVM.IsSearching, Mode=OneWay}">
            <ProgressBar Margin="0,0,0,8" IsIndeterminate="True" />
            <TextBlock
                FontSize="14"
                Opacity="0.7"
                Text="{x:Bind FolderVM.SearchStatus, Mode=OneWay}" />
        </StackPanel>

        <GridView
            Name="FileListView"
            Grid.Row="2"
            Padding="0,0,0,8"
            IncrementalLoadingThreshold="12"
            IsItemClickEnabled="True"
            ItemClick="FileListView_ItemClick"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectionMode="None"
            ShowsScrollingPlaceholders="False">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:LocalModel">
                    <Grid Style="{StaticResource FileItemStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Column="0"
                            Width="64"
                            Height="64"
                            Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                            CornerRadius="4">
                            <Image
                                x:Phase="4"
                                Source="{x:Bind Thumbnail, Converter={StaticResource ThumbnailConverter}}"
                                Stretch="Uniform" />
                        </Border>

                        <StackPanel
                            Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center">
                            <TextBlock
                                FontWeight="SemiBold"
                                MaxLines="1"
                                Text="{x:Bind SongTitle}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                FontSize="14"
                                Opacity="0.6"
                                Text="{x:Bind Artist}" />
                        </StackPanel>
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Opacity="0.5"
                            Text="{x:Bind DurationString}"
                            TextTrimming="CharacterEllipsis" />
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ListViewItemPresenter
                                    Padding="0,0,4,0"
                                    HorizontalContentAlignment="Stretch"
                                    SelectionCheckMarkVisualEnabled="False" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </GridView.ItemContainerStyle>
        </GridView>
    </Grid>
</Page>