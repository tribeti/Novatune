<Page
    x:Class="Novatune.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvs="using:LibVLCSharp.Platforms.Windows"
    xmlns:storage="using:Windows.Storage"
    xmlns:vm="using:Novatune.ViewModels"
    Background="Transparent">

    <Page.DataContext>
        <vm:FolderViewModel />
    </Page.DataContext>

    <Grid Margin="20,50,20,20" CacheMode="BitmapCache">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox
            Width="400"
            MinWidth="300"
            Margin="0,0,0,8"
            HorizontalAlignment="Right"
            PlaceholderText="Search" />
        <!--  TextChanged=""  -->


        <ScrollViewer
            Grid.Row="2"
            HorizontalScrollBarVisibility="Hidden"
            HorizontalScrollMode="Enabled"
            VerticalScrollBarVisibility="Hidden"
            VerticalScrollMode="Disabled">

            <ItemsView
                x:Name="FoldersListView"
                ItemsSource="{Binding Folders}"
                SelectionChanged="Folders_SelectionChanged"
                SelectionMode="Single">
                <ItemsView.Layout>
                    <StackLayout Orientation="Horizontal" Spacing="10" />
                </ItemsView.Layout>

                <ItemsView.ItemTemplate>
                    <DataTemplate x:DataType="storage:StorageFolder">
                        <ItemContainer>
                            <Grid
                                Width="150"
                                Height="150"
                                Padding="10"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <FontIcon
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe Fluent Icons"
                                    FontSize="32"
                                    Glyph="&#xE8B7;" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind Name}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </ItemContainer>
                    </DataTemplate>
                </ItemsView.ItemTemplate>
            </ItemsView>
        </ScrollViewer>

        <Grid
            x:Name="MediaPlayerGrid"
            Grid.Row="3"
            MinHeight="240"
            Margin="0,16,0,0"
            Visibility="Collapsed">

            <lvs:VideoView
                x:Name="VideoView"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</Page>